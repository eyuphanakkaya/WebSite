@model WebSite.Models.Entity.TbContact
<div class="row">

    <div class="eight columns">

        <!-- form -->
        <form method="post">
            <fieldset>

                <div>
                    <label for="contactName">Name <span class="required">*</span></label>
                    <input type="text" value="" size="35"  name="NameSurname">
                </div>

                <div>
                    <label for="contactEmail">Email <span class="required">*</span></label>
                    <input type="text" value="" size="35" name="Mail">
                </div>

                <div>
                    <label for="contactSubject">Subject</label>
                    <input type="text" value="" size="35"  name="Subject">
                </div>

                <div>
                    <label for="contactMessage">Message <span class="required">*</span></label>
                    <textarea cols="50" rows="15"  name="Message"></textarea>
                </div>

                <div>
                    <button class="submit">Gönder</button>
                    <span id="image-loader">
                        <img alt="" src="/bootstrap/images/loader.gif">
                    </span>
                </div>

            </fieldset>
        </form> <!-- Form End -->
        <!-- contact-warning -->
        <!--<div id="message-warning"> Error boy</div>-->
        <!-- contact-success -->
        <!--<div id="message-success">
            <i class="fa fa-check"></i>Mesaj Paylaşıldı,Teşekkürler!<br>
        </div>-->

    </div>


    <aside class="four columns footer-widgets">

        @Html.Action("_About")


    </aside>

</div>
